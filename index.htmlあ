<body>
  <header>
    <h1>My Wiki</h1>
    <p>知識を整理し、共有するためのWiki</p>
  </header>

  <main>
    <h2>記事検索</h2>
    <input type="text" id="searchBar" placeholder="キーワードを入力..." />

    <ul class="article-list" id="articleList">
      <li>読み込み中...</li>
    </ul>
  </main>

  <footer>
    <p>&copy; 2025 My Wiki</p>
  </footer>

  <script>
    const searchBar = document.getElementById("searchBar");
    const articleList = document.getElementById("articleList");
    let articles = [];

    // JSONから記事を読み込む
    fetch("articles.json")
      .then(res => res.json())
      .then(data => {
        articles = data;
        renderArticles(articles);
      })
      .catch(() => {
        articleList.innerHTML = "<li>記事を読み込めませんでした。</li>";
      });

    // 記事一覧を描画
    function renderArticles(list) {
      articleList.innerHTML = "";
      if (list.length === 0) {
        articleList.innerHTML = "<li>該当する記事がありません。</li>";
        return;
      }

      list.forEach(article => {
        const li = document.createElement("li");
        li.className = "article-item";
        li.innerHTML = `
          <a href="article.html?title=${encodeURIComponent(article.title)}">${article.title}</a>
          <p>${article.description}</p>
        `;
        articleList.appendChild(li);
      });
    }

    // 検索機能
    searchBar.addEventListener("input", () => {
      const query = searchBar.value.toLowerCase();
      const filtered = articles.filter(a =>
        a.title.toLowerCase().includes(query) ||
        a.description.toLowerCase().includes(query)
      );
      renderArticles(filtered);
    });
  </script>
</body>
