      border-bottom: 1px solid #a2a9b1;
      text-align: center;
    }

    header h1 {
      margin: 0;
      font-size: 2rem;
    }

    main {
      padding: 2rem;
      max-width: 900px;
      margin: auto;
    }

    input[type="text"] {
      width: 100%;
      padding: 0.6rem;
      font-size: 1rem;
      border: 1px solid #a2a9b1;
      border-radius: 6px;
      box-sizing: border-box;
      margin-bottom: 1rem;
    }

    .article-list {
      list-style: none;
      padding: 0;
    }

    .article-item {
      margin: 0.8rem 0;
      background-color: #fff;
      padding: 0.6rem 1rem;
      border-radius: 6px;
      border: 1px solid #e0e0e0;
      transition: 0.2s;
    }

    .article-item:hover {
      background-color: #f0f7ff;
      border-color: #bcd3f7;
    }

