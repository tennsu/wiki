  <script>
    const params = new URLSearchParams(window.location.search);
    const title = params.get("title");

    if (!title) return;

    fetch("articles.json")
      .then(res => res.json())
      .then(data => {
        const article = data.find(a => a.title === title);
        if (!article) return;

        document.getElementById("pageTitle").textContent = article.title;

        // „Ç§„É≥„Éï„Ç©„Éú„ÉÉ„ÇØ„ÇπHTMLÁîüÊàê
        let infoboxHTML = "";
        if (article.infobox && Object.keys(article.infobox).length > 0) {
          infoboxHTML = `
            <aside class="infobox">
              <h2>${article.title}</h2>
              <table>
                ${Object.entries(article.infobox)
                  .map(([key, val]) => `<tr><th>${key}</th><td>${val}</td></tr>`)
                  .join("")}
              </table>
            </aside>`;
        }

        // Êú¨ÊñáË°®Á§∫
        const mainContainer = document.getElementById("mainContainer");
        mainContainer.innerHTML = `
          ${infoboxHTML}
          <article class="content">
            <div class="meta">
              <strong>${article.title}</strong><br>
              ${article.description ? article.description : ""}
              <br><small>ÊúÄÁµÇÊõ¥Êñ∞: ${article.updatedAt ? new Date(article.updatedAt).toLocaleString() : "‰∏çÊòé"}</small>
            </div>
            <div class="article-body">${marked.parse(article.markdown || "")}</div>
          </article>
        `;
      })
      .catch(() => {
        const main = document.getElementById("mainContainer");
        main.innerHTML = `
          <div class="not-found">
            <h2>Ë®ò‰∫ã„Éá„Éº„Çø„ÅÆË™≠„ÅøËæº„Åø„Å´Â§±Êïó„Åó„Åæ„Åó„Åü„ÄÇ</h2>
            <a class="back-btn" href="index.html">„Éõ„Éº„É†„Å∏Êàª„Çã</a>
          </div>
        `;
      });
  </script>
